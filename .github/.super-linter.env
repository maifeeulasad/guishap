# Super-Linter environment configuration
LOG_LEVEL=VERBOSE
VALIDATE_ALL_CODEBASE=true

# Enable specific linters
VALIDATE_C=true
VALIDATE_CPP=true
VALIDATE_MARKDOWN=true
VALIDATE_YAML=true

# Exclude generated files
FILTER_REGEX_EXCLUDE=.*(\.tab\.c|\.tab\.h|\.yy\.c|lex\.yy\.c|guishap\.tab\..*)$

# Don't fail on warnings
DISABLE_ERRORS=false
